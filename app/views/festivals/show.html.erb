<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="festival show">
  <h2>Show Festival</h2>

  <table summary="festival detail view">
    <tr>
      <th>ID</th>
      <td><%= @festival.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @festival.festival_name %></td>
    </tr>
    <tr>
      <th>Uid</th>
      <td><%= @festival.uid %></td>
    </tr>
    <tr>
      <th>Date</th>
      <td><%= @festival.festival_date %></td>
    </tr>
    <tr>
      <th>Latitude</th>
      <td><%= @festival.latitude %></td>
    </tr>
    <tr>
      <th>Longitude</th>
      <td><%= @festival.longitude %></td>
    </tr>
    <tr>
      <th>Caption</th>
      <td><%= @festival.caption %></td>
    </tr>
    <tr>
      <th>Details</th>
      <td><%= @festival.details %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @festival.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @festival.updated_at %></td>
    </tr>
  </table>

</div>
