<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="hotel edit">
  <h2>Update hotel</h2>

  <%= form_for(:hotel, :url => {:action => 'update', :id => @hotel.id}) do |f| %>

    <table summary="Hotel form fields">
      <tr>
        <th>Festival name</th>
        <td><%= f.text_field(:hotel_name) %></td>
      </tr>
      <tr>
        <th>UID</th>
        <td><%= f.text_field(:uid) %></td>
      </tr>
      <tr>
        <th>Rating</th>
        <td><%= f.text_field(:rating) %></td>
      </tr>
      <tr>
        <th>Icon</th>
        <td><%= f.text_field(:hotel_icon) %></td>
      </tr>
      <tr>
        <th>Banner</th>
        <td><%= f.text_field(:hotel_banner) %></td>
      </tr>
      <tr>
        <th>Latitude</th>
        <td><%= f.text_field(:latitude) %></td>
      </tr>
      <tr>
        <th>Longitude</th>
        <td><%= f.text_field(:longitude) %></td>
      </tr>
      <tr>
        <th rowspan="2">Contact Number</th>
        <td><%= f.text_field(:contact_number1) %></td>
      </tr>
       <tr>
        <th>Offer</th>
        <td><%= f.text_field(:offer) %></td>
      </tr>
       <tr>
        <th>Address</th>
        <td><%= f.text_area(:address) %></td>
      </tr>
       <tr>
        <td><%= f.text_field(:contact_number2) %></td>
      </tr>
      <tr>
        <td><%= f.text_field(:caption) %></td>
      </tr>
      <tr>
        <th>Details</th>
        <td><%= f.text_area(:details) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Hotel") %>
    </div>

  <% end %>
</div>
